<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hue.mapper.RobotDialogEmotionMapper">
    <select id="findByElderlyIdAndDate" resultType="com.example.hue.dto.RobotDialogEmotion">
        SELECT *
        FROM ROBOT_DIALOG_EMOTION
        WHERE elderly_id = #{elderlyId}
          AND TRUNC(create_time) = TO_DATE(#{date}, 'YYYY-MM-DD')
    </select>
</mapper>